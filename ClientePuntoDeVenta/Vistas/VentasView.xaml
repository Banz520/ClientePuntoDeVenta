<Window x:Class="ClientePuntoDeVenta.Vistas.VentasView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Venta" Height="500" Width="600"
        Background="#1E1E2F" Foreground="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registrar Venta" FontSize="24" FontWeight="Bold"/>

        <ListBox x:Name="ListaProductos" Grid.Row="1" Background="#2A2A3D" Foreground="White"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Agregar al carrito" Background="#0088CC" Width="150"  Margin="0,0,10,0"/>
            <Button Content="Registrar Venta" Background="#44BB44" Width="150"  Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>