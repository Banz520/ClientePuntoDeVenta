<Window x:Class="ClientePuntoDeVenta.Vistas.ProductosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Productos" Height="500" Width="800"
        Background="#1E1E2F" Foreground="White">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gestión de Productos" FontSize="24" FontWeight="Bold" Margin="0 0 0 10"/>

        <DataGrid x:Name="ProductosGrid" Grid.Row="1" AutoGenerateColumns="False" Background="#2A2A3D" Foreground="White"
                  HeadersVisibility="Column" RowBackground="#333" AlternatingRowBackground="#2A2A3D" BorderBrush="#444">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="Auto"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Agregar" Width="100" Background="#0088CC" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Modificar" Width="100" Background="#006699" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Eliminar" Width="100" Background="#CC0033" Foreground="White"/>
        </StackPanel>

    </Grid>
</Window>
